@using Microsoft.AspNetCore.Identity
@using StudyResource.ViewModels.Account
@model LoginViewModel
@inject SignInManager<User> signInManager

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_Layout";
}

<div class="container" style="margin-top:100px; margin-bottom:100px;">
    <div class="login_section mx-auto my-5" style="max-width: 400px;">
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl" method="post" role="form">
            <h1 class="text-center mb-4">Đăng nhập</h1>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Email Input -->
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password Input -->
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
            </div>

            <!-- Register Link -->
            <p class="text-center">
                Bạn chưa có tài khoản? <a asp-action="Register">Tạo tài khoản ở đây</a>
            </p>
        </form>
    </div>
</<div>