@using StudyResource.ViewModels.Account
@model RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_Layout";
}

<div class="container" style="margin-top:100px; margin-bottom:100px;">
    <div class="register_section mx-auto my-5" style="max-width: 600px;">
        <form asp-controller="Account" asp-action="Register" method="post" role="form">
            <h1 class="text-center mb-4">Đăng ký</h1>
            <hr />

            <div class="row">
                <div class="form-group mb-3 col-6">
                    <label asp-for="LastName" class="form-label">Họ của bạn</label>
                    <input asp-for="LastName" class="form-control" placeholder="Nhập họ của bạn">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-6">
                    <label asp-for="FirstName" class="form-label">Tên của bạn</label>
                    <input asp-for="FirstName" class="form-control" placeholder="Nhập tên của bạn">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group mb-3 col-6">
                    <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-6">
                    <label asp-for="Email" class="form-label">Tài khoản Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group mb-3 col-6">
                    <label asp-for="Password" class="form-label">Mật khẩu</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-6">
                    <label asp-for="ConfirmPassword" class="form-label">Mật khẩu xác nhận</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
        </form>
    </div>
</div>