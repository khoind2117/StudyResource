                                    <label asp-for="Profile.LastName" class="control-label">Họ</label>
                                    <input asp-for="Profile.LastName" class="form-control" />
                                    <span asp-validation-for="Profile.LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Profile.PhoneNumber" class="control-label">Số điện thoại</label>
                                <input asp-for="Profile.PhoneNumber" class="form-control" />
                                <span asp-validation-for="Profile.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="genric-btn info-border circle" style="font-size: 15px; margin-right: 20px">Cập nhật</button>
                                <a asp-action="Manage" class="genric-btn danger-border circle" style="font-size: 15px; text-decoration: none;">Hủy</a>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="v-pills-password" role="tabpanel" aria-labelledby="v-pills-password-tab">
