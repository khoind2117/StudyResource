@using Microsoft.AspNetCore.Identity
@using StudyResource.ViewModels
@model X.PagedList.IPagedList<StudyResource.Models.Document>
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Tìm kiếm tài liệu";
}

<div class="container" style="margin-top:100px; margin-bottom:100px;">
    <h4>Tìm kiếm tài liệu</h4>
    <h4>Kết quả tìm kiếm cho: "<strong>@ViewBag.Query</strong>"</h4>
    <hr />

    @if (ViewBag.Message != null)
    {
        <p class="alert alert-warning">@ViewBag.Message</p>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var doc in Model)
            {
                <div class="col-12 mb-3">
                    <div class="card border-info mb-3">
                        <div class="row g-0">
                            <div class="col-md-2">
                                @{
                                    var thumbnailLink = $"https://drive.google.com/thumbnail?sz=w200&id={doc.GoogleDriveId}";
                                    var defaultImage = "/pdf-image.png";
                                }
                                <a asp-controller="Document" asp-action="Detail" asp-route-id="@doc.Id" target="_blank">
                                    <img referrerPolicy="no-referrer"
                                         src="@thumbnailLink"
                                         alt="@doc.Title"
                                         class="img-fluid"
                                         onerror="this.onerror=null; this.src='@defaultImage';" />
                                </a>
                            </div>
                            <div class="col-md-10">
                                <div class="card-body">
                                    <a asp-controller="Document" asp-action="Detail" asp-route-id="@doc.Id" target="_blank">
                                        <h4><strong class="text-uppercase card-title">@doc.Title</strong></h4>
                                    </a>
                                    <span class="text-uppercase">
                                        Người đăng:
                                        <span class="text-danger mr-3">
                                            @if (await UserManager.IsInRoleAsync(doc.User, "Admin"))
                                            {
                                                @:Admin
                                            }
                                            else
                                            {
                                                @($"{doc.User.LastName} {doc.User.FirstName}")
                                            }
                                        </span>
                                        Ngày đăng:
                                        <span class="text-primary mr-3">@doc.UploadDate.ToString("dd/MM/yyyy")</span>
                                        Lượt xem:
                                        <span class="text-primary mr-3">@doc.Views</span>
                                        Lượt tải:
                                        <span class="text-primary mr-3">@doc.Downloads</span>
                                    </span>
                                    <hr />
                                    <span class="card-text">@doc.Description</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <nav>
            <ul class="pagination justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Search", new { query = ViewBag.Query, page = Model.PageNumber - 1 })">Trước</a>
                    </li>
                }

                @if (Model.PageNumber > 3)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Search", new { query = ViewBag.Query, page = 1 })">1</a>
                    </li>
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                }

                @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.PageCount, Model.PageNumber + 2); i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Search", new { query = ViewBag.Query, page = i })">@i</a>
                    </li>
                }

                @if (Model.PageNumber < Model.PageCount - 2)
                {
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Search", new { query = ViewBag.Query, page = Model.PageCount })">@Model.PageCount</a>
                    </li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Search", new { query = ViewBag.Query, page = Model.PageNumber + 1 })">Tiếp</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

