@model IEnumerable<StudyResource.Models.Favorite>

<h2>Danh Sách Tài Liệu Yêu Thích</h2>

@if (!Model.Any())
{
    <p>Bạn chưa có tài liệu yêu thích nào.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Tiêu Đề</th>
                <th>Mô Tả</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var favorite in Model)
            {
                <tr>
                    <td>@favorite.Document.Title</td>
                    <td>@favorite.Document.Description</td>
                    <td>
                        <a href="@Url.Action("Detail", "Document", new { id = favorite.DocumentId })" class="btn btn-primary">Xem Chi Tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
