@model List<Document>

@{
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h3>Quản lý tài liệu</h3>
    <a class="btn btn-primary">Tạo tài liệu</a>
    <table class="table table-striped table-bordered">
        <thead class="bg-primary text-white">
            <tr >
                <th>Tiêu đề</th>
                <th>Môn học</th>
                <th>Loại tài liệu</th>
                <th>Ngày tải lên</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
        @if (Model == null || Model.Count == 0)
        {
            <tr>
                <td colspan="5" class="text-center">
                    <strong>
                        Hiện tại không tìm thấy tài liệu
                    </strong>
                </td>
            </tr>
        }
        else
        {
            @foreach (var doc in Model)
            {
                <tr>
                    <td>@doc.Title</td>
                    <td>@doc.GradeSubject?.Name</td>
                    <td>@doc.DocumentType?.Name</td>
                    <td>@doc.UploadDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="@Url.Action("Details", "Document", new { id = doc.Id })">Chi tiết</a>
                        <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "Document", new { id = doc.Id })">Cập nhật</a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Document", new { id = doc.Id })"
                            onclick="return confirm('Bạn có chắc muốn xóa tài liệu này?');">Xóa</a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>