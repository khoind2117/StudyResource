@using StudyResource.ViewModels.DocumentType
@model UpdateDocumentTypeViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Cập nhật loại tài liệu";
}

<div class="container-fluid">
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-warning">
            <h4 class="text-white mb-0">
                <i class="ti ti-edit"></i>Cập nhật loại tài liệu
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="Update" method="post" class="needs-validation" novalidate>
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Tên loại tài liệu</label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên loại tài liệu" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-warning me-2">
                        <i class="ti ti-pencil-check"></i> Cập nhật
                    </button>
                    <a asp-area="Admin" asp-controller="DocumentType" asp-action="Index" class="btn btn-secondary">
                        <i class="ti ti-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

